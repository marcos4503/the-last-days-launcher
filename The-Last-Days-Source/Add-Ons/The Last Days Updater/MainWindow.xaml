<Window x:Class="The_Last_Days_Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Last_Days_Updater"
        mc:Ignorable="d"
        Title="The Last Days" Icon="/Resources/mini-icon-32px.png" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Width="512" Height="512">
        <Grid Margin="0,0,0,64" ClipToBounds="True">
            <Image Source="/Resources/splash-screen.png" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="-64,0,0,0"/>
        </Grid>
        <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Bottom" Padding="0,0,0,0" Height="2" Margin="0,0,0,62"/>
        <Grid VerticalAlignment="Bottom" Height="62">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="statusText" TextWrapping="Wrap" Text="Place Holder" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ProgressBar x:Name="statusBar" Height="16" Width="256" Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
